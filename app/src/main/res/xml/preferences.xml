<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="@string/my_name"
        android:title="My pronounciable name"
        android:defaultValue="Manik" />
    <EditTextPreference
        android:key="@string/hubby_name"
        android:title="Hubby's pronounciable name"
        android:defaultValue="Mayha" />  <!-- Meha  -->
    <EditTextPreference
        android:key="@string/hubby_phone_number"
        android:title="Hubby's Phone Number"
        android:defaultValue="+91xxxxxxxx" />
    <ListPreference
        android:key="@string/paired_devices"
        android:title="Car stereo bluetooth device"
        android:entries="@array/paired_devices"
        android:entryValues="@array/paired_devices_values"
        android:defaultValue="Not-set" />
    <EditTextPreference
        android:key="@string/connect_message"
        android:title="Message on stereo connect"
        android:defaultValue="Leaving office right now. What's ur status?" />
    <EditTextPreference
        android:key="@string/disconnect_message"
        android:title="Message on stereo disconnect"
        android:defaultValue="Reached home" />
    <EditTextPreference
        android:key="@string/time_slot"
        android:title="Time slot"
        android:defaultValue="After 4pm on weekdays (fixed)"
        android:enabled="false"
        android:summary="After 4pm on weekdays (fixed)" />
    <EditTextPreference
        android:key="@string/welcome_message"
        android:title="Welcome message on car stereo connect"
        android:defaultValue="Your phone is now connected to the car stereo."
        android:summary="Message to play when car stereo is connected" />
    <EditTextPreference
        android:key="@string/test_message"
        android:title="Test message"
        android:defaultValue="This is test message"
        android:summary="Message to play on speak-out" />
    <CheckBoxPreference
        android:key="@string/always_speak_out"
        android:title="Incoming Hubby's messages"
        android:summaryOff="Speaking only when connected to car stereo"
        android:summaryOn="Always speaking out"  />
    <CheckBoxPreference
        android:key="@string/bluetooth_sco"
        android:title="Bluetooth SCO"
        android:summaryOff="Using device audio stream"
        android:summaryOn="Use bluetooth SCO for audio" />
    <ListPreference
        android:dependency="@string/bluetooth_sco"
        android:key="@string/sco_mode"
        android:title="Bluetoooth SCO mode to use"
        android:entries="@array/sco_modes"
        android:entryValues="@array/sco_mode_values"
        android:defaultValue="2" />  <!-- Default AudioManager.MODE_IN_CALL -->
    <CheckBoxPreference
        android:key="@string/weather_update"
        android:title="Provide weather update"
        android:summaryOff="Weather update turned off"
        android:summaryOn="Providing weather update in the morning" />
    <EditTextPreference
        android:dependency="@string/weather_update"
        android:key="@string/weather_woeid"
        android:title="WOEID"
        android:defaultValue="29228812"
        android:summary="Yahoo weather service WOEID" />
    <EditTextPreference
        android:key="@string/office_wifi"
        android:title="Office WIFI name (SSID)"
        android:defaultValue="office"
        android:summary="Office wifi" />
    <RingtonePreference
        android:key="@string/car_disconnect_tone"
        android:title="Notification sound on disconnect from car stereo"
        android:showSilent="true"
        android:ringtoneType="notification"
        android:summary="(Ringtone not set)" />
    </PreferenceScreen>